<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purpleDark"
    android:label="@string/text_accurate_information">

    <TextView
        android:id="@+id/encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:text="@string/text_encrypt"
        android:gravity="center"
        android:width="100dp"
        android:height="30dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="110dp" />

    <TextView
        android:id="@+id/decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:text="@string/text_decrypt"
        android:gravity="center"
        android:width="100dp"
        android:height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/usageOfCPU"
        android:textColor="@color/greyBKG"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:width="100dp"
        android:height="50dp"
        android:text="@string/text_usage_of_cpu"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/valueCPUEncrypt"
        android:textColor="@color/whiteText"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignBaseline="@id/usageOfCPU"
        android:layout_alignBottom="@id/usageOfCPU"
        android:layout_toEndOf="@id/usageOfCPU"
        android:layout_toRightOf="@id/usageOfCPU"
        android:layout_alignLeft="@id/encrypt"
        android:width="100dp"
        android:text="@string/text_waiting_for_value"
        android:layout_alignStart="@id/encrypt" />

    <TextView
        android:id="@+id/valueCPUDecrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignBaseline="@id/usageOfCPU"
        android:layout_alignBottom="@id/usageOfCPU"
        android:layout_alignLeft="@id/decrypt"
        android:layout_alignStart="@id/decrypt"
        android:width="100dp"
        android:gravity="center"
        android:text="@string/text_waiting_for_value" />

    <TextView
        android:id="@+id/usageOfMemory"
        android:textStyle="italic"
        android:textColor="@color/greyBKG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_marginTop="125dp"
        android:width="100dp"
        android:height="50dp"
        android:gravity="center"
        android:text="@string/text_usage_of_memory"
        android:layout_alignStart="@id/usageOfCPU" />

    <TextView
        android:id="@+id/valueMemoryEncryptRAM"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/encrypt"
        android:layout_alignStart="@id/encrypt"
        android:layout_alignBaseline="@id/usageOfMemory"
        android:width="60dp"
        android:height="50dp"/>

    <TextView
        android:id="@+id/valueMemoryEncrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/encrypt"
        android:layout_alignStart="@id/encrypt"
        android:layout_alignBaseline="@id/usageOfMemory"
        android:layout_marginLeft="60dp"
        android:width="55dp"
        android:height="50dp"
        android:layout_marginStart="60dp" />

    <TextView
        android:id="@+id/valueMemoryDecryptRAM"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/decrypt"
        android:layout_alignBaseline="@id/usageOfMemory"
        android:width="60dp"
        android:height="50dp"
        android:layout_alignStart="@id/decrypt" />

    <TextView
        android:id="@+id/valueMemoryDecrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/decrypt"
        android:layout_alignStart="@id/decrypt"
        android:layout_alignBaseline="@id/usageOfMemory"
        android:layout_marginLeft="60dp"
        android:width="55dp"
        android:height="50dp"
        android:layout_marginStart="60dp" />

    <TextView
        android:id="@+id/maxCPU"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBKG"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_marginTop="180dp"
        android:width="100dp"
        android:height="50dp"
        android:gravity="center"
        android:text="@string/text_max_cpu"
        android:layout_alignStart="@id/usageOfCPU"/>

    <TextView
        android:id="@+id/valueMaxCPUEncrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/encrypt"
        android:layout_alignStart="@id/encrypt"
        android:layout_alignBaseline="@id/maxCPU"
        android:width="100dp"
        android:height="50dp"/>

    <TextView
        android:id="@+id/valueMaxCPUDecrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/decrypt"
        android:layout_alignBaseline="@id/maxCPU"
        android:width="100dp"
        android:height="50dp"
        android:layout_alignStart="@id/decrypt" />

    <TextView
        android:id="@+id/maxMEM"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBKG"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_marginTop="235dp"
        android:width="100dp"
        android:height="50dp"
        android:gravity="center"
        android:text="@string/text_max_mem"
        android:layout_alignStart="@id/usageOfCPU"/>

    <TextView
        android:id="@+id/valueMaxMEMEncrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/encrypt"
        android:layout_alignStart="@id/encrypt"
        android:layout_alignBaseline="@id/maxMEM"
        android:width="100dp"
        android:height="50dp"/>

    <TextView
        android:id="@+id/valueMaxMEMDecrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/decrypt"
        android:layout_alignBaseline="@id/maxMEM"
        android:width="100dp"
        android:height="50dp"
        android:layout_alignStart="@id/decrypt" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBKG"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_alignStart="@id/usageOfCPU"
        android:layout_marginTop="290dp"
        android:width="100dp"
        android:height="50dp"
        android:gravity="center"
        android:text="@string/text_time" />

    <TextView
        android:id="@+id/valueTimeEncrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/encrypt"
        android:layout_alignStart="@id/encrypt"
        android:layout_alignBaseline="@id/time"
        android:width="100dp"
        android:height="50dp"/>

    <TextView
        android:id="@+id/valueTimeDecrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/decrypt"
        android:layout_alignBaseline="@id/time"
        android:width="100dp"
        android:height="50dp"
        android:layout_alignStart="@id/decrypt" />

    <TextView
        android:id="@+id/cntCPU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBKG"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_alignStart="@id/usageOfCPU"
        android:layout_marginTop="345dp"
        android:width="100dp"
        android:height="60dp"
        android:gravity="center"
        android:text="@string/text_trustly_cpu_values" />

    <TextView
        android:id="@+id/valueOPCPUEncrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/encrypt"
        android:layout_alignStart="@id/encrypt"
        android:layout_alignBaseline="@id/cntCPU"
        android:width="100dp"
        android:height="50dp"/>

    <TextView
        android:id="@+id/valueOPCPUDecrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/decrypt"
        android:layout_alignBaseline="@id/cntCPU"
        android:width="100dp"
        android:height="50dp"
        android:layout_alignStart="@id/decrypt" />

    <TextView
        android:id="@+id/cntMEM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBKG"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_alignStart="@id/usageOfCPU"
        android:layout_marginTop="410dp"
        android:width="100dp"
        android:height="70dp"
        android:gravity="center"
        android:text="@string/text_trustly_mem_values" />

    <TextView
        android:id="@+id/valueOPMEMEncrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/encrypt"
        android:layout_alignStart="@id/encrypt"
        android:layout_alignBaseline="@id/cntMEM"
        android:width="100dp"
        android:height="50dp"/>

    <TextView
        android:id="@+id/valueOPMEMDecrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/text_waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/decrypt"
        android:layout_alignBaseline="@id/cntMEM"
        android:width="100dp"
        android:height="50dp"
        android:layout_alignStart="@id/decrypt" />


</RelativeLayout>