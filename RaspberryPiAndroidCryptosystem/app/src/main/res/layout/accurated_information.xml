<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purpleDark"
    android:label="@string/accurated_information">

    <TextView
        android:id="@+id/encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:text="@string/encrypt"
        android:gravity="center"
        android:width="100dp"
        android:height="30dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="110dp" />

    <TextView
        android:id="@+id/decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:text="@string/decrypt"
        android:gravity="center"
        android:width="100dp"
        android:height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/usageOfCPU"
        android:textColor="@color/greyBKG"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:width="100dp"
        android:height="50dp"
        android:text="@string/usage_of_cpu"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/valueCPUEncrypt"
        android:textColor="@color/whiteText"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignBaseline="@id/usageOfCPU"
        android:layout_alignBottom="@id/usageOfCPU"
        android:layout_toEndOf="@id/usageOfCPU"
        android:layout_toRightOf="@id/usageOfCPU"
        android:layout_alignLeft="@id/encrypt"
        android:width="100dp"
        android:text="@string/waiting_for_value"
        android:layout_alignStart="@id/encrypt" />

    <TextView
        android:id="@+id/valueCPUDecrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignBaseline="@id/usageOfCPU"
        android:layout_alignBottom="@id/usageOfCPU"
        android:layout_alignLeft="@id/decrypt"
        android:layout_alignStart="@id/decrypt"
        android:width="100dp"
        android:gravity="center"
        android:text="@string/waiting_for_value" />

    <TextView
        android:id="@+id/usageOfMemory"
        android:textStyle="italic"
        android:textColor="@color/greyBKG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_marginTop="125dp"
        android:width="100dp"
        android:height="50dp"
        android:gravity="center"
        android:text="@string/usage_of_memory"
        android:layout_alignStart="@id/usageOfCPU" />

    <TextView
        android:id="@+id/valueMemoryEncrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/encrypt"
        android:layout_alignStart="@id/encrypt"
        android:layout_alignBaseline="@id/usageOfMemory"
        android:width="100dp"
        android:height="50dp"/>

    <TextView
        android:id="@+id/valueMemoryDecrypt"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/waiting_for_value"
        android:gravity="center"
        android:layout_alignLeft="@id/decrypt"
        android:layout_alignBaseline="@id/usageOfMemory"
        android:width="100dp"
        android:height="50dp"
        android:layout_alignStart="@id/decrypt" />

    <TextView
        android:id="@+id/maxCPU"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBKG"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_marginTop="180dp"
        android:width="100dp"
        android:height="50dp"
        android:gravity="center"
        android:text="@string/maxCPU"
        android:layout_alignStart="@id/usageOfCPU"/>

    <TextView
        android:id="@+id/maxMEM"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBKG"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_marginTop="235dp"
        android:width="100dp"
        android:height="50dp"
        android:gravity="center"
        android:text="@string/maxMEM"
        android:layout_alignStart="@id/usageOfCPU"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBKG"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_alignStart="@id/usageOfCPU"
        android:layout_marginTop="290dp"
        android:width="100dp"
        android:height="50dp"
        android:gravity="center"
        android:text="@string/time" />

    <TextView
        android:id="@+id/cntCPU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBKG"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_alignStart="@id/usageOfCPU"
        android:layout_marginTop="345dp"
        android:width="100dp"
        android:height="60dp"
        android:gravity="center"
        android:text="@string/trustly_cpu_values" />

    <TextView
        android:id="@+id/cntMEM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBKG"
        android:layout_alignLeft="@id/usageOfCPU"
        android:layout_alignStart="@id/usageOfCPU"
        android:layout_marginTop="410dp"
        android:width="100dp"
        android:height="70dp"
        android:gravity="center"
        android:text="@string/trustly_mem_values" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>